<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="| %-5p | %d{yyyy-MM-dd HH:mm:ss} | %m | (%F:%L)%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.safecharge.retail" level="debug"/>

        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>